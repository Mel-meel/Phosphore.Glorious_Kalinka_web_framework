proc BaseKalinka_TCL_packages {} {
    global CONFIG
    
    foreach pkg $CONFIG(TCLPackages) {
        if {$pkg == "tdbc::sqlite"} {
            set pkg "tdbc::sqlite3"
        }
        if {[catch {package require $pkg}]} {
            BaseKalinka_erreur "Impossible de charger le package '$pkg'"
        } else {
            package require $pkg
        }
    }
}
